div.page-header
  div.name Modulos
  div.options
    div.option
      a.link(data-ng-href='{{systemUri.modulo()}}') Listagem
    div.option
      a.link(data-ng-href='{{systemUri.moduloCadastro()}}') Cadastro

div.modulo-container
  div.lista
    div.item.cursorPointer(data-ng-repeat='modulo in ::modulos track by $index', data-ng-click='irParaKanban(modulo)')
      div.linha
        span.textodestaque(data-ng-bind="modulo.nome")
      div.linha
        div.indices
          span.textosecundario Funcionalidades {{modulo.funcionalidades.length}}
        div.equipes
          span.label equipes
          div.equipe(data-ng-repeat='equipe in ::modulo.equipes')
            span.letra {{equipe.nome.charAt(0)}}

