div.funcionalidade-container(data-ng-controller='FuncionalidadeController')
  div.titulo
    p Cadastro Funcionalidade
  div.formulario
    form(name='formFuncionalidade')
      div.inputcontainer
        label.label(for='nome') Nome
        input.input(type='text',
                    name='nome',
                    data-ng-model='novaFuncionalidade.titulo'
                    required)

      div.inputcontainer
        label.label(for='editor') Especificação geral
        textarea(type="text",
                 name='descricao',
                 data-ng-model='novaFuncionalidade.descricao')

      div.botoes
        button(data-ng-click='cadastrarFuncionalidade(novaFuncionalidade)') Salvar
      div.anexos
        p anexos

  div.opcoes
    div.campo
      label(for='selecaoModulo') Modulos
      select(name='selecaoModulo')
        option(value="Teste")

