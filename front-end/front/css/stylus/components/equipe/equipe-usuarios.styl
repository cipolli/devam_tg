.membros-dialog
  width: 100%

.membrosContainer 
  padding: 10px
  width: 100%

  .form
    display: flex
    width: 100%

    .email
      margin: 5px 0 0 0;
      width: 40%
  
  .listagem
    width: 100%
    
    .header
      font-size: pt(16)
      .title
        margin: 0
        color: $accentColor 
    
    .list
      width: 100%
      @media(min-width: em(800px))
        display: flex
        flex-wrap: wrap
        align-content: space-between
      
      .item
        @media(min-width: em(800px))
          width: 33%;
      
      .usuario
        margin-top: 10px
        display: flex
        padding: 10px
        .imagem
          width: 48px
          height: 48px
        
        .detalhe
          margin-left: 10px
          .nome
            margin: 0
          .email
            margin: 5px 0 0 0


