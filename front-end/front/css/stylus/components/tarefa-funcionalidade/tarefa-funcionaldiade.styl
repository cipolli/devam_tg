.tarefafuncionalidade-container
  padding 20px

  > .lista
    > .item
      padding 20px 0 20px 10px
      border 1px solid $secondaryTextColor
      border-radius 2px
      margin-bottom 10px
      color $primaryTextColor
      display flex

      > .col
        display flex
        width 33%
        > .textodestaque
          font-size pt(18px)
          font-family 'lato light'

        > .textosecundario
          margin-top: 5px
          font-size pt(12px)
          font-family 'lato regular'
          display block

      > .acoes
        display: flex
        flex-direction: row-reverse
        width: 30%
        > .botoes
          > .button 30px
          > .editar
            height: 30px
            vertical-align: middle
            line-height: 30px

  > .tarefaFuncForm
    font-family 'lato light'
    > .inputcontainer
      margin 15px 0
      > .label
        display block
        margin-bottom 5px
      > .input
        width 50%
        height 30px
        font-size pt(16px)
        color #111
        padding 5px
      > .textarea
        width 50%
        font-size pt(16px)
        color #111
        padding 5px

      > .message-container
        color $messageError

    > .botoes
      margin 20px 0
      > .botaoCadastrar
        width 150px
        height 45px
        border none
        background $darkAccentColor
        cursor pointer
        font-size pt(18px)
        color $textPrimaryColor

      > .botao_desabilitado
        cursor auto
        background #BBB

