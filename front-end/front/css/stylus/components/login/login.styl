$form_login
  margin 10% auto
  padding 20px
  width 40%
  border 1px solid $dividerColor
  border-radius 5px
  background-color: #fff
  opacity: 0.9

.login-container
  width: 100%
  height: 100%
  background: url(/build/images/default/office_wallpaper_02.jpg) no-repeat fixed center
  background-size: 100% 100%;
  display: flex

  > .imageshadow
    width: 100%
    height: 100%
    background-color: #000
    opacity: 0.75
  
  .signin
    @extends $form_login

    > .form
      > .campo
        margin-top 20px
        > label
          color $primaryTextColor
          display block
          margin 5px 0 5px 0

        > input
          color $primaryTextColor
          height 40px
          border-radius 2px
          padding 5px
          width 100%

    > .botoes
      margin-top 20px
      display flex
      align-content: space-between
      flex-wrap: wrap

      > .button
        width 50%
        height 45px
        border none
        background $darkAccentColor
        cursor pointer
        font-size pt(18px)
        color $textPrimaryColor

      > button[disabled]
        cursor auto
        background #BBB

      > .links
        width: 50%
        margin-top 10px
        text-align: end
        
        > .createaccount
          color: #512DA8
  
  .signup
    @extends $form_login

    > .header
      width: 100%
      text-align: center
    
    > .form-container form
      font-family 'lato light'
      > .inputcontainer
        margin 15px 0
        > .label
          display block
          margin-bottom 5px
        > .input
          width 100%
          height 30px
          font-size pt(16px)
          color #111
          padding 5px

        > .textarea
          width 100%
          font-size pt(16px)
          color #111
          padding 5px

      > .inputcontainer_senha
        margin 15px 0
        position relative
        > .label
          display block
          margin-bottom 5px
  
        > .icon
          width 30px
          height 30px
          position absolute
          right 15px
          top 47%
          z-index 4
          &:hover
            cursor pointer
        
        > .input
          width 100%
          height 30px
          font-size pt(16px)
          color #111
          padding 5px

        > .message-container
          color $messageError

    > .botoes
      margin-top 20px
      display flex
      align-content: space-between
      flex-wrap: wrap

      > .button
        width 50%
        height 45px
        font-size pt(18px)
        color $textPrimaryColor
      
      > .cadastrar
        background $darkAccentColor
        cursor pointer
        border none

      > button[disabled]
        cursor auto
        background #BBB

      > .cancelar
        width: 30%
        margin-left: 20%
        border 1px solid #512DA8
        background:  none
        color: #512DA8