.chart
  font-family 'Arial'
  font-size 13px
  color #000
  & > .axis
    .tick
      line
        fill none
        stroke #999
        stroke-width 2
  & > path
    &.ideal
      stroke #eee
      stroke-width 5
      stroke-linecap round
    &.actual
      stroke #91E500
      stroke-width 2
      stroke-linecap round
      fill none
  & > .grid
    .tick
      stroke #eee
      opacity 0.5

.chart > .axis path,
.chart > .axis line
  fill none
  stroke #eee
  stroke-width 2
  shape-rendering crispEdges

body
  margin 40px
  font-family "lato light"

.intro
  h1
    font 200 1.7em "lato light"
    font-weight 200
    color #666
  p
    max-width 600px

