.page-header
  height 70px
  border-bottom 1px solid $dividerColor
  box-shadow 0 1px 2px $dividerColor
  display flex
  flex-wrap wrap

  > .name
    width 100%
    height 40px
    line-height 40px
    text-align center
    color $primaryTextColor
    vertical-align middle
    font-family lato light
    font-size pt(20px)

    @media(min-width: em(800px))
      width 30%
      height 70px
      line-height 70px
      border-right 1px solid $dividerColor

  > .options
    width 100%
    height 30px
    display flex
    border-top 1px solid $dividerColor
    @media(min-width: em(800px))
      height 70px
      width 70%

    > .option
      margin 0 10px
      height 30px
      line-height 30px
      color $primaryTextColor
      vertical-align middle
      font-family lato light
      font-size pt(14px)
      @media(min-width: em(800px))
        height 70px
        line-height 70px


.boards
  width 900px
  padding-top 20px
  display flex
  overflow-x auto

  > .section
    height auto
    width 300px
    border 1px solid $accentColor
    margin-left 2px

    > .header
      height 40px
      line-height 40px
      text-align center
      background $accentColor
      color $textPrimaryColor

      > .title
        font-size 16pt

    > .tasks
      padding 5px

      > .task
        padding 5px
        margin-bottom 5px
        border-radius 2px
        font-family lato light
        font-size pt(12px)
        min-height 30px
        background $taskColor
        cursor move
      &:move
        box-shadow: 3px 6px 20px rgba(0, 0, 0, 0.4);
        -webkit-transform: scale(1.12);
        -moz-transform: scale(1.12);
        -o-transform: scale(1.12);
        position: relative;
        z-index: 1035;

    > .add
      width 100%
      height 24px
      margin-bottom 5px
      > .button
        display block
        width 100%
        text-align center
        > .icon
          margin 0 auto
          width 24px
          height 24px
          background $primaryColor

    > .footer
      height 20px
      background $accentColor